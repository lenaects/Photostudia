@page "/"
@using Microsoft.EntityFrameworkCore
@using PhotoStudia_1.Models
@inject PhotostudiaContext DbContext
<section class="hero-section">
    <div class="hero-overlay">
        <div class="hero-content">
            <h1>Создаём воспоминания,<br />которые останутся навсегда</h1>
            <button class="cta-button" @onclick="() => ShowRequestForm = true">Записаться на фотосессию</button>
            <p class="contact-phone">или позвоните нам: <a href="tel:+79999999999">+7 (999) 999 99 99</a></p>
            <RequestModal Show="@ShowRequestForm" ShowChanged="@((val) => ShowRequestForm = val)" />
        </div>
    </div>
</section>

<section class="about">
    <h2>О ФОТОЦЕНТРЕ</h2>
    <div class="stats">
        <div class="stat">
            <strong>2020</strong>
            <p>Работаем с<br />2020 года</p>
        </div>
        <div class="stat"> 
            <strong>10+</strong>
            <p>Профессиональных<br />фотографов</p>
        </div>
        <div class="stat">
            <strong>100</strong>
            <p>Довольных<br />клиентов ежегодно</p>
        </div>
    </div>
</section>
<style>
    @@media (max-width: 768px) {
    .hero-content h1 {
        font-size: 24px;
        text-align: center;
    }

    .cta-button {
        font-size: 16px;
        padding: 10px 20px;
    }

    .contact-phone {
        font-size: 14px;
        text-align: center;
    }

    .stats {
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .stat {
        text-align: center;
    }
}

@@media (max-width: 480px) {
    .hero-content h1 {
        font-size: 20px;
    }

    .cta-button {
        font-size: 14px;
        padding: 8px 16px;
    }

    .contact-phone {
        font-size: 12px;
    }
}
</style>
@code {
    private bool ShowRequestForm = false;
}